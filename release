#!/bin/bash
#svn update
svn cp trunk/hbrowse1/. https://hbrowse.googlecode.com/svn/tags/hbrowse-$1-$2-$3
svn export trunk/hbrowse1/client ../hbrowse_exports/hbrowse-$1-$2-$3/.
mkdir ../hbrowse_exports/hbrowse-common-$1-$2-$3
cp -R ../hbrowse_exports/hbrowse-$1-$2-$3/media/* ../hbrowse_exports/hbrowse-common-$1-$2-$3/.
rm -rf ../hbrowse_exports/hbrowse-common-$1-$2-$3/css
rm -rf ../hbrowse_exports/hbrowse-common-$1-$2-$3/scripts/settings*
cd ../hbrowse_exports/
tar -pczf hbrowse-$1-$2-$3.tar.gz hbrowse-$1-$2-$3
tar -pczf hbrowse-common-$1-$2-$3.tar.gz hbrowse-common-$1-$2-$3
